<?xml version="1.0" encoding="UTF-8"?>
<idea-plugin>
    <id>com.christianhelle.apiclientcodegen</id>
    <name>REST API Client Code Generator</name>
    <vendor url="https://github.com/christianhelle/apiclientcodegen">Christian Resma Helle</vendor>
    <description><![CDATA[
        Generate C# and TypeScript REST API clients from OpenAPI / Swagger specifications using NSwag, Refitter, OpenAPI Generator, Kiota, Swagger Codegen CLI, and AutoRest. Adds project view context menus for spec and .refitter files.
    ]]></description>
    <version>${pluginVersion}</version>
    <idea-version since-build="${pluginSinceBuild}" until-build="${pluginUntilBuild}"/>
    <depends>com.intellij.modules.platform</depends>
    <actions>
        <group id="ApiClientCodeGen.Group" text="REST API Client Code Generator" popup="true">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
            <action id="ApiClientCodeGen.CSharp" class="com.christianhelle.apiclientcodegen.actions.GenerateCSharpClientAction" text="Generate C# Client (NSwag)" description="Generate C# REST API Client using NSwag"/>
            <action id="ApiClientCodeGen.TypeScript" class="com.christianhelle.apiclientcodegen.actions.GenerateTypeScriptClientAction" text="Generate TypeScript Client (Angular)" description="Generate TypeScript REST API Client (Angular)"/>
            <action id="ApiClientCodeGen.Refitter" class="com.christianhelle.apiclientcodegen.actions.GenerateRefitterAction" text="Generate Refitter Output" description="Generate Refit interfaces from .refitter file"/>
        </group>
    </actions>
</idea-plugin>
